<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane disable="false" prefHeight="400.0" prefWidth="600.0" visible="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="swing.longtask.ViewController">
  <children>
    <BorderPane>
      <center>
        <TextArea id="filecontents" fx:id="fileContents" prefWidth="200.0" wrapText="true" />
      </center>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <top>
        <HBox alignment="CENTER" spacing="12.0">
          <children>
            <TextField fx:id="fileName" onAction="#actionPerformed" prefWidth="200.0" />
            <Button onAction="#openFile" text="..." />
          </children>
          <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </BorderPane.margin>
        </HBox>
      </top>
    </BorderPane>
    <ProgressIndicator fx:id="progressIndicator" maxHeight="100.0" maxWidth="100.0" opacity="0.0" progress="0.0" />
  </children>
</StackPane>
